<!DOCTYPE html>
<html>
  <head>
    <title>521</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  </head>

  <body>
    <div class="navbar-container">
      <nav class="navbar sticky-top">
        <% if user_signed_in? %>
          <li class="navbar-brand"><%= link_to "#{current_user.first_name}'s 521", root_path %></li>
        <% else %>
          <li class="navbar-brand"><%= link_to "Your 521", root_path %></li>
        <% end %>

        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="background-color: #283e4a; color: white;"=>
          <i class="material-icons" style="font-size: 30px">menu</i>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item active"><%= link_to current_user.first_name, edit_user_registration_path %></li>
              <li class="nav-item"><%= link_to "Invitation", '/choicestable' %></li>
              <li class="nav-item"><%= link_to "Chat Room", chatrooms_index_path %></li>
              <li class="nav-item"><%= link_to "Log Out", destroy_user_session_path, :method=>'delete' %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Log-In", new_user_session_path %></li>
              <li class="nav-item"><%= link_to "Register", new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
    <div class="main-body">
      <%= yield %>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
